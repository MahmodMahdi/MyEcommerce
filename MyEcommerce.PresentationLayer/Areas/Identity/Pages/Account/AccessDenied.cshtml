@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm border-0 text-center" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">

            <div class="mb-3">
                <i class="bi bi-shield-lock-fill text-danger" style="font-size: 3rem;"></i>
            </div>

            <h4 class="fw-bold text-danger mb-2">Access Denied</h4>

            <p class="text-muted mb-4">
                You do not have permission to access this page.
                Please contact the administrator or return to a safe page.
            </p>

            <div class="d-grid gap-2">
                <a asp-page="/Index" class="btn btn-outline-secondary">
                    Back to Home
                </a>
            </div>

        </div>
    </div>
</div>

