@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Check Your Email";
}

<section class="confirmation-page">
    <div class="container py-5 text-center">
        <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
            <div class="col-md-6">
                <div class="card p-5 shadow-lg" style="border-radius: 2rem;">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="mb-3">@ViewData["Title"]</h2>
                    <p class="text-muted mb-4">
                        We have sent a password reset link to your email.
                        Please check your inbox (and spam folder) to proceed.
                    </p>
                    <a asp-page="./Login" class="btn btn-primary btn-lg px-5" style="border-radius: 10px;">
                        Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>