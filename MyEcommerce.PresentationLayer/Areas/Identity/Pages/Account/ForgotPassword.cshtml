@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<section class="forgot-password-page">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">

            <!-- FORM CARD -->
            <div class="col-md-6 col-lg-5 d-flex">
                <div class="forgot-card p-5 shadow-lg w-100 d-flex flex-column justify-content-center" style="border-radius: 2rem; height: 550px;">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                    <p class="text-center mb-4">Enter your email to reset your password.</p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Reset Password</button>

                        <div class="text-center mt-3">
                            <a asp-page="./Login" class="link-modern"><i class="bi bi-arrow-left me-1"></i> Back to Login</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- SIDE IMAGE -->
            <div class="col-md-6 col-lg-6 d-flex">
                <img src="~/img/OIP.P" class="img-fluid w-100" style="object-fit: cover; height: 550px; border-radius: 2rem;">
            </div>

        </div>
    </div>
</section>

<style>
    .forgot-card {
        background: #ffffff;
        box-shadow: 0 0 50px rgba(0,0,0,0.2);
        transition: transform 0.3s;
    }

        .forgot-card:hover {
            transform: translateY(-5px);
        }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,.25);
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        font-weight: 600;
        transition: background 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
        }

    .link-modern {
        color: #0d6efd;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s, transform 0.2s;
    }

        .link-modern:hover {
            color: #0b5ed7;
            transform: translateX(5px);
        }

    i {
        vertical-align: middle;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}