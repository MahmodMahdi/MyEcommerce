@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="login-page">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">

            <!-- FORM CARD -->
            <div class="col-md-6 col-lg-6 d-flex">
                <div class="login-card p-5 shadow-lg w-100 d-flex flex-column justify-content-between" style="height: 700px; border-radius: 2rem;">
                    <div>
                        <h2 class="text-center mb-5">Welcome Back!</h2>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-4">
                                <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-4">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Login</button>

                            <!-- LINKS BELOW BUTTON (MODERN STYLING) -->
                            <div class="d-flex flex-column align-items-center mt-3">
                                <a asp-page="./forgotpassword" class="link-modern mb-2"><i class="bi bi-key-fill me-1"></i> forgot your password?</a>
@*                                 <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-modern mb-2"><i class="bi bi-person-plus-fill me-1"></i> Register as a new user</a>
 *@                                <p class="mb-4">
                                    <span class="text-muted">Don't have an account?</span>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-primary text-decoration-none">Register</a>
                                </p>
                                @*     <a asp-page="./ResendEmailConfirmation" class="link-modern"><i class="bi bi-envelope-fill me-1"></i> Resend email confirmation</a>                                <hr />
 *@                                <div class="d-flex align-items-center w-100 mb-4">
                                    <div style="flex: 1; height: 1px; background-color: #eee;"></div>
                                    <span class="mx-3 text-muted" style="font-size: 0.8rem;">OR</span>
                                    <div style="flex: 1; height: 1px; background-color: #eee;"></div>
                                </div>
                            </div>
                        </form>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            article
                                            about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                @if (provider.Name == "Google")
                                                {
                                                    <button type="submit" class="btn btn-google w-100 mb-3" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                        <img src="https://developers.google.com/static/identity/images/g-logo.png" alt="Google" style="width:20px; margin-right:10px;">Continue with Google
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-primary w-100 mb-3" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                }
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- SIDE IMAGE -->
            <div class="col-md-6 col-lg-6 d-flex">
                <img src="~/img/OIP.png" class="img-fluid w-100" style="object-fit: cover; height: 550px; border-radius: 2rem;">
            </div>

        </div>
    </div>
</section>

<style>
    .login-card {
        background: #ffffff;
        box-shadow: 0 0 50px rgba(0,0,0,0.2);
        transition: transform 0.3s;
    }

        .login-card:hover {
            transform: translateY(-5px);
        }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,.25);
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        font-weight: 600;
        transition: background 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
        }

    .link-modern {
        color: #0d6efd;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s, transform 0.2s;
    }

        .link-modern:hover {
            color: #0b5ed7;
            transform: translateX(5px);
        }

    i {
        vertical-align: middle;
    }
    /* Google Button Styling */
    .btn-google {
        background-color: #ffffff;
        color: #757575;
        border: 1px solid #dadce0;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.3s, box-shadow 0.3s;
        height: 50px; /* ليتناسب مع حجم الـ Input */
    }

        .btn-google:hover {
            background-color: #f8f9fa;
            box-shadow: 0 1px 3px rgba(60,64,67,0.3);
            color: #3c4043;
            border-color: #d2e3fc;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
