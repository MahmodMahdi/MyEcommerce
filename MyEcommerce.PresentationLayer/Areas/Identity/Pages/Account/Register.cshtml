@page
@using Utilities
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="register-page">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">

            <!-- FORM CARD -->
            <div class="col-md-6 col-lg-5 d-flex">
                <div class="register-card p-5 shadow-lg w-100 d-flex flex-column justify-content-center" style="border-radius: 2rem; height: 820px;">
                    <h2 class="text-center mb-4">Create a new account</h2>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Name" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Name">UserName</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Address" class="form-control form-control-lg" aria-required="true" />
                            <label asp-for="Input.Address">Address</label>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.City" class="form-control form-control-lg" aria-required="true" />
                            <label asp-for="Input.City">City</label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" aria-required="true" />
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        @if (User.IsInRole(Helper.AdminRole))
                        {
                            <div class="mb-3 d-flex gap-3 align-items-center">
                                <label class="me-2">Select Role:</label>
                                <input type="radio" value="@Helper.AdminRole" name="RoleRadio" /> @Helper.AdminRole
                                <input type="radio" value="@Helper.EditorRole" name="RoleRadio" /> @Helper.EditorRole
                                <input type="radio" value="@Helper.CustomerRole" name="RoleRadio" /> @Helper.CustomerRole
                            </div>
                        }

                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100 mt-3" >
                            @(User.IsInRole(Helper.AdminRole) ? "Add new User" : "Register")
                        </button>

                        <div class="text-center mt-3">
                            <a asp-page="./Login" class="link-modern"><i class="bi bi-arrow-left me-1"></i> Back to Login</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- SIDE IMAGE -->
            <div class="col-md-6 col-lg-6 d-flex">
                <img src="~/img/OIP.png" class="img-fluid w-100" style="object-fit: cover; height: 650px; border-radius: 2rem;">
            </div>

        </div>
    </div>
</section>

<style>
    .register-card {
        background: #ffffff;
        box-shadow: 0 0 50px rgba(0,0,0,0.2);
        transition: transform 0.3s;
    }

        .register-card:hover {
            transform: translateY(-5px);
        }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,.25);
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        font-weight: 600;
        transition: background 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
        }

    .link-modern {
        color: #0d6efd;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s, transform 0.2s;
    }

        .link-modern:hover {
            color: #0b5ed7;
            transform: translateX(5px);
        }

    i {
        vertical-align: middle;
    }

    .field-validation-error {
        font-size: 0.8rem;
        font-weight: 500;
        display: block;
        margin-top: 5px;
        color: #dc3545;
        animation: fadeIn 0.5s;
    }

    .keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* جعل حدود الحقل حمراء عند الخطأ */
    .input-validation-error {
        border-color: #dc3545 !important;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // جلب الأخطاء من الـ Validation Summary المخفي
            var errorMessages = [];
            $(".text-danger.mb-3 ul li").each(function() {
                errorMessages.push($(this).text());
            });

            if (errorMessages.length > 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'عذراً.. هناك خطأ',
                    html: errorMessages.join('<br>'), // عرض الأخطاء تحت بعضها
                    confirmButtonColor: '#0d6efd',
                    confirmButtonText: 'حسناً',
                    timer: 5000
                });
            }
        });
    </script>
}
