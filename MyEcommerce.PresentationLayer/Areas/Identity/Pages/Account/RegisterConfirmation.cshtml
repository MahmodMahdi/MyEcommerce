@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Check Your Email";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 confirmation-card">
        <div class="card-body text-center p-5">

            <!-- Animated Icon -->
            <div class="icon-wrapper mb-4">
                <i class="bi bi-envelope-check-fill"></i>
            </div>

            <h1 class="fw-bold text-primary mb-3">
                @ViewData["Title"]
            </h1>

            <p class="text-muted fs-6 mb-4">
                We've sent a confirmation email to
                <strong class="text-dark">@Model.Email</strong>.
                <br />
                Please click the link inside the email to activate your account.
            </p>

            <!-- Info Box -->
            <div class="alert alert-info rounded-3">
                <i class="bi bi-info-circle me-1"></i>
                If you don’t see the email, check your spam or promotions folder.
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-center gap-3 mt-4">
                <a asp-area="" asp-page="/Index" class="btn btn-outline-primary px-4">
                    <i class="bi bi-house-door me-1"></i> Home
                </a>

                <a href="mailto:support@ShopShperekl.com" class="btn btn-primary px-4">
                    <i class="bi bi-headset me-1"></i> Contact Support
                </a>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #f8f9fa);
    }

    .confirmation-card {
        max-width: 520px;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        animation: fadeInUp 0.6s ease-in-out;
    }

    .icon-wrapper {
        width: 90px;
        height: 90px;
        margin: 0 auto;
        border-radius: 50%;
        background: linear-gradient(135deg, #0d6efd, #6610f2);
        display: flex;
        align-items: center;
        justify-content: center;
        animation: pulse 2s infinite;
    }

        .icon-wrapper i {
            font-size: 42px;
            color: #fff;
        }

    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(13,110,253,0.5);
        }

        70% {
            box-shadow: 0 0 0 15px rgba(13,110,253,0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(13,110,253,0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
