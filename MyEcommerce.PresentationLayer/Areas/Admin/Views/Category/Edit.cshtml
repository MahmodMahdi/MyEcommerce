@model CategoryViewModel
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Edit Category";
    // Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea id="mytextarea"
                                      asp-for="Description"
                                      class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- BUTTONS -->
                        <div class="d-flex gap-3 mt-4">
                            <input type="submit"
                                   value="Save"
                                   class="btn btn-success px-4" />

                            <a asp-action="Index"
                               asp-controller="Category"
                               class="btn btn-outline-secondary">
                                Back To List
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
      tinymce.init({
            selector: '#mytextarea',
            height: 250,
             menubar: false,
            plugins: 'lists link image media table wordcount',
            toolbar: 'undo redo | formatselect | bold italic underline | bullist numlist | link image media',
            placeholder: "Enter product description here...",
        });   
        document.getElementById("file").addEventListener("change", function(event){
            var img = document.getElementById("preview");
            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.transform = "scale(1.05)";
            setTimeout(()=> img.style.transform = "scale(1)", 300);
    </script>
    }
