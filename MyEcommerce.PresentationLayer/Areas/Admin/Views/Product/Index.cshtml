@model ProductViewModel
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Products";
}

<div>
    <br />
    <a href="/Admin/Product/Create" class="btn btn-primary" style="margin:0px 0px 0px 10px">Create New Product</a>
</div>
<table id="table" class="table table-hover" width="100%">
    <thead class="text-bold">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Stock Quantity</th>
            <th>Category</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/Product.js"></script>
}
