@model ProductViewModel
@{
    SelectList items = new SelectList(ViewBag.CategoryDropDownList, "Id", "Name");
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.Image" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Image"></label>
                <input asp-for="Product.Image" type="file" name="file" id="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId">Category</label>
                <select class="form-control" asp-for="Product.CategoryId" asp-items="items"><option selected disabled>-- Select Category --</option></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="container">
            <img src="~/@Model.Product.Image" width="300" height="300"/>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Product">Back To List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
