@model ProductViewModel
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
}

<div class="row justify-content-center mt-4">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-gradient-primary text-white rounded-top-4">
                <h3 class="mb-0">@ViewBag.CardTitle</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Image" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control form-control-lg shadow-sm" style="border-radius: 0.5rem;" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea id="mytextarea" asp-for="Description" class="form-control shadow-sm" style="border-radius: 0.5rem;" placeholder="Enter product description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Image" class="form-label fw-bold"></label>
                        <input asp-for="Image" type="file" name="image" id="file" class="form-control shadow-sm" style="border-radius: 0.5rem;" />
                        <span asp-validation-for="Image" class="text-danger"></span>

                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Price" class="form-label fw-bold"></label>
                        <input asp-for="Price" class="form-control shadow-sm" style="border-radius: 0.5rem;" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Discount" class="form-label fw-semibold">Discount </label>
                        <input asp-for="Discount" class="form-control form-control-lg shadow-sm" max="100" min="0" type="number" placeholder="Enter the discount" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="StockQuantity" class="form-label fw-semibold"></label>
                        <input asp-for="StockQuantity" class="form-control form-control-lg shadow-sm" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                        <select class="form-control shadow-sm" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Value", "Text"))" style="border-radius: 0.5rem;">
                            <option disabled>-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success btn-lg shadow-sm" style="border-radius: 2rem; width: 48%;">Save</button>
                        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary btn-lg shadow-sm" style="border-radius: 2rem; width: 48%;">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mt-4 mt-lg-0">
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
            <img id="preview" src="~/@Model.Image" class="img-fluid" style="object-fit: cover; max-height: 500px; transition: transform 0.3s;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
            tinymce.init({
                selector: '#mytextarea',
                height: 250,
                 menubar: false,
                plugins: 'lists link image media table wordcount',
                toolbar: 'undo redo | formatselect | bold italic underline | bullist numlist | link image media',
                placeholder: "Enter product description here...",
            });

            document.getElementById("file").addEventListener("change", function(event){
                var img = document.getElementById("preview");
                img.src = URL.createObjectURL(event.target.files[0]);
                img.style.transform = "scale(1.05)";
                setTimeout(()=> img.style.transform = "scale(1)", 300);
        });
    </script>
}