
@model ProductViewModel
@{
    SelectList items = new SelectList(ViewBag.CategoryDropDownList, "Id", "Name", Model.Product.CategoryId);
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
}

<div class="row justify-content-center mt-4">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-gradient-primary text-white rounded-top-4">
                <h3 class="mb-0">@ViewBag.CardTitle</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
                    <input type="hidden" asp-for="Product.Id" />
                    <input type="hidden" asp-for="Product.Image" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Product.Name" class="form-label fw-bold"></label>
                        <input asp-for="Product.Name" class="form-control form-control-lg shadow-sm" style="border-radius: 0.5rem;" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Product.Description" class="form-label fw-bold"></label>
                        <textarea id="mytextarea" asp-for="Product.Description" class="form-control shadow-sm" style="border-radius: 0.5rem;" placeholder="Enter product description..."></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Product.Image" class="form-label fw-bold"></label>
                        <input asp-for="Product.Image" type="file" name="file" id="file" class="form-control shadow-sm" style="border-radius: 0.5rem;" />
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Product.Price" class="form-label fw-bold"></label>
                        <input asp-for="Product.Price" class="form-control shadow-sm" style="border-radius: 0.5rem;" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Product.CategoryId" class="form-label fw-bold">Category</label>
                        <select class="form-control shadow-sm" asp-for="Product.CategoryId" asp-items="items" style="border-radius: 0.5rem;">
                            <option disabled>-- Select Category --</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success btn-lg shadow-sm" style="border-radius: 2rem; width: 48%;">Save</button>
                        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary btn-lg shadow-sm" style="border-radius: 2rem; width: 48%;">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mt-4 mt-lg-0">
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
            <img id="preview" src="~/@Model.Product.Image" class="img-fluid" style="object-fit: cover; max-height: 500px; transition: transform 0.3s;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
            selector: 'textarea',
            height: 250,
            menubar: false,
            plugins: 'lists link image media table wordcount',
            toolbar: 'undo redo | formatselect | bold italic underline | bullist numlist | link image media',
            placeholder: "Enter product description here...",
        });

        document.getElementById("file").addEventListener("change", function(event){
            var img = document.getElementById("preview");
            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.transform = "scale(1.05)";
            setTimeout(()=> img.style.transform = "scale(1)", 300);
    });
    </script>
}
