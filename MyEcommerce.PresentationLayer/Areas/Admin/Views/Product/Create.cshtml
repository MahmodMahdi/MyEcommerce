@model ProductViewModel
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Create Product";
}

<div class="row gx-5 gy-4 mt-4">
    <!-- Form Section -->
    <div class="col-lg-6">
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <h3 class="text-primary fw-bold mb-4">@ViewBag.CardTitle</h3>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Product.Name" class="form-label fw-semibold">Product Name</label>
                    <input asp-for="Product.Name" class="form-control form-control-lg shadow-sm" placeholder="Enter the product name" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Description" class="form-label fw-semibold">Description</label>
                    <textarea id="mytextarea" asp-for="Product.Description" class="form-control shadow-sm" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Image" class="form-label fw-semibold">Product Image</label>
                    <input type="file" name="image" id="file" class="form-control shadow-sm" onchange="Preview(event);" />
                    <span asp-validation-for="Product.Image" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label fw-semibold">Price ($)</label>
                    <input asp-for="Product.Price" class="form-control form-control-lg shadow-sm" placeholder="Enter the product price" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.StockQuantity" class="form-label fw-semibold"></label>
                    <input asp-for="Product.StockQuantity" class="form-control form-control-lg shadow-sm" />
                    <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Product.CategoryId" class="form-label fw-bold">Category</label>
                    <select class="form-control shadow-sm" asp-for="Product.CategoryId" asp-items="@ViewBag.CategoryDropDownList" style="border-radius: 0.5rem;">
                        <option selected disabled>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm" style="border-radius: 2rem; width: 48%;">Create</button>
                    <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary btn-lg shadow-sm" style="border-radius: 2rem; width: 48%;">Back To List</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Preview Image Section -->
    <div class="col-lg-6 d-flex justify-content-center align-items-start">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="width: 100%; max-width: 420px;">
            <img id="preview" src="~/images/placeholder.png" class="card-img-top" style="object-fit: cover; height: 450px; transition: transform .3s;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons link lists media searchreplace table wordcount',
            toolbar: 'undo redo | blocks | bold italic underline | link media table | numlist bullist | removeformat',
            height: 300
        });

        var Preview = function(event){
            var img = document.getElementById("preview");
            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.transform = "scale(1.05)";
            setTimeout(()=> img.style.transform="scale(1)", 300);
        }
    </script>
}
