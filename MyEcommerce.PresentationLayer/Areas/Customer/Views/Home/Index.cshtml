@model PaginatedResultViewModel<ProductViewModel>

@* from Layout Tempelete of Premium Bootstrap site *@
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @if (!Model.Items.Any())
            {
                <h1 class="align-content-center">Nothing Added yet!!!</h1>
            }
            @foreach (var item in Model.Items)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        @if (item.Discount > 0)
                        {
                            <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem; padding: 0.5rem; border-radius: 50%;">
                                -@item.Discount.ToString("0")%
                            </div>
                        }
                        <!-- Product image-->
                        <a asp-action="Details" asp-route-ProductId="@item.Id"><img class="card-img-top" src="~/@item.Image" alt="..." width="450" height="300" /></a>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Name</h5>
                                <div>
                                    @if(item.Discount > 0)
                                    {
                                        <div class="text-muted text-decoration-line-through mb-1" style="font-size: 1.1rem;">
                                            @item.Price.ToString("N2") ج.م
                                        </div>
                                        <div class="fw-bold" style="color: #e63946; font-size: 1.5rem;">
                                            ج.م @item.AcualPrice.ToString("N2")
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="fw-bold fs-5">@item.AcualPrice.ToString("N2") ج.م</span>
                                    }
                                </div>
                                <!-- Product price-->
@*                                 @item.AcualPrice.ToString("c")
 *@                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="Details" asp-route-ProductId="@item.Id">Details </a></div>
                        </div>
                    </div>
                </div>
            }
            @* Pagination *@
        </div>
     
        @if (@Model.Items.Any())
        {
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       href="/Customer/Home/index?PageNumber=@(Model.CurrentPage - 1)">Previous</a>
                </li>
                @for (int j = 0; j < Model.TotalPages; j++)
                {
                    if ((j + 1) == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <a class="page-link"
                               href="/Customer/Home/index?PageNumber=@(j + 1)">
                                @(j + 1)
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item ">
                            <a class="page-link"
                               href="/Customer/Home/index?PageNumber=@(j + 1)">
                                @(j + 1)
                            </a>
                        </li>
                    }
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       href="/Customer/Home/index?PageNumber=@(Model.CurrentPage + 1)">
                        Next
                    </a>
                </li>
            </ul>
        }

    </div>
</section>
