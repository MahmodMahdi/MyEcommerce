@model PaginatedResultViewModel<ProductViewModel>
@{
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ar";
}

<section class="py-5" dir="@(isArabic ? "rtl" : "ltr")">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @if (!Model.Items.Any())
            {
                <div class="d-flex flex-column justify-content-center align-items-center text-center mt-5">
                    <i class="bi bi-cart-x" style="font-size: 4rem; color: #dc3545;"></i>
                    <h3 class="mt-3 text-danger">@(isArabic ? "لا توجد منتجات مضافة بعد!" : "Nothing Added Yet!")</h3>
                </div>
            }

            @foreach (var item in Model.Items)
            {
                <div class="col mb-4">
                    <div class="card h-100 w-60">
                        @if (item.Discount > 0)
                        {
                            @* تعديل مكان الـ Badge بناءً على اللغة *@
                            <div class="badge bg-danger text-white position-absolute"
                                 style="top: 0.5rem; @(isArabic ? "right: 0.5rem;" : "right: 0.5rem;"); padding: 0.5rem; border-radius: 50%;">
                                -@item.Discount.ToString("0")%
                            </div>
                        }

                        <a asp-action="Details" asp-route-ProductId="@item.Id">
                            <img class="card-img-top" src="~/@item.Image" alt="@item.Name" width="450" style="height: 150px;" />
                        </a>

                        <div class="card-body p-2 text-center">
                            <h6 class="fw-bolder">@item.Name</h6>

                            <div class="mt-3">
                                @if (item.Discount > 0)
                                {
                                    <div class="text-muted text-decoration-line-through mb-1" style="font-size: 0.9rem;">
                                        @item.Price.ToString("N2") @(isArabic ? "ج.م" : "EGP")
                                    </div>
                                    <div class="fw-bold" style="color: #e63946; font-size: 1.3rem;">
                                        @(isArabic ? "ج.م" : "EGP") @item.AcualPrice.ToString("N2")
                                    </div>
                                }
                                else
                                {
                                    <span class="fw-bold fs-5">@item.AcualPrice.ToString("N2") @(isArabic ? "ج.م" : "EGP")</span>
                                }
                            </div>
                        </div>

                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto w-100" asp-action="Details" asp-route-ProductId="@item.Id" style="border-radius: 20px;">
                                    @(isArabic ? "التفاصيل" : "Details")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* Pagination *@
        @if (Model.Items.Any())
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="/Customer/Home/index?PageNumber=@(Model.CurrentPage - 1)">
                            @(isArabic ? "السابق" : "Previous")
                        </a>
                    </li>

                    @for (int j = 1; j <= Model.TotalPages; j++)
                    {
                        <li class="page-item @(j == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="/Customer/Home/index?PageNumber=@j">@j</a>
                        </li>
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="/Customer/Home/index?PageNumber=@(Model.CurrentPage + 1)">
                            @(isArabic ? "التالي" : "Next")
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</section>