@model ShoppingCart
<form method="post">
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <input hidden asp-for="ProductId" value="@Model.ProductId" />
            <input hidden asp-for="Id" value="@Model.Id" />
            <div class="row gx-4 gx-lg-5 align-items-center">

                <!-- صورة المنتج -->
                <div class="col-md-4 text-center">
                    <div class="product-image-wrapper">
                        <img class="card-img-top" src="~/@Model.Product.Image" alt="@Model.Product.Name" />
                    </div>
                </div>

                <!-- تفاصيل المنتج -->
                <div class="col-md-6">
                    <div class="text-uppercase fw-semibold mb-1" style="font-size: 0.9rem; color: #555;">
                        <span class="badge bg-secondary text-uppercase">@Model.Product.Category.Name</span>

                    </div>                   
                    <h3 class="display-4 fw-bold">@Model.Product.Name</h3>
                    <div class="fs-4 mb-4">
                        <span class="text-muted text-decoration-line-through me-2">$50.00</span>
                        <span class="text-danger fw-bold fs-3">$@Model.Product.Price</span>
                    </div>

                    <p class="lead mb-4">@Model.Product.Description</p>

                    <div class="d-flex align-items-center mb-4">
                        <!-- زرار زيادة/نقص الكمية -->
                        <div class="input-group me-3" style="max-width: 120px;">
                            <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('inputQuantity').stepDown()">-</button>
                            <input class="form-control text-center" id="inputQuantity" asp-for="Count" min="1" value="1" />
                            <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('inputQuantity').stepUp()">+</button>
                        </div>
                        @if (!User.IsInRole("Admin"))
                            {
                                <!-- أزرار الأفعال -->
                                <button class="btn btn-dark me-3" type="submit">
                                    <i class="bi-cart-fill me-1"></i>
                                    Add to Cart
                                </button>
                            }
                            <a class="btn btn-primary" href="/" role="button">
                            <i class="bi-house-door-fill me-1"></i>
                            Return Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        .btn-dark, .btn-primary {
            border-radius: 50px; /* الشكل المستدير */
            padding: 6px 15px; /* تصغير المسافة الداخلية */
            font-size: 0.95rem; /* حجم الخط مناسب */
            line-height: 1.2; /* ارتفاع السطر مضبوط */
        }

        .product-image-wrapper {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

            .product-image-wrapper img {
                width: 100%;
                max-height: 500px;
                object-fit: cover;
                transition: transform 0.3s;
            }

                .product-image-wrapper img:hover {
                    transform: scale(1.05);
                }
    </style>

</form>