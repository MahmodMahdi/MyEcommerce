@model int
@{
    ViewBag.Title = "Order Confirmation"; 
}

<div class="d-flex justify-content-center align-items-center py-5">
    <div class="confirmation-card text-center p-5 shadow rounded-4">
        <div class="checkmark" style="font-size: 60px; color: #28a745;">&#10004;</div>
        <h3 class="text-primary fw-bold mb-3">Order Confirmed!</h3>
        <hr />
        <h2>Your Order Number Has Been Successfully Placed</h2>
        <a href="/Customer/Home/Index" class="btn btn-primary btn-lg mt-4">Back to Home</a>
    </div>
</div>

<style>
    .confirmation-card {
        background: #fff;
        max-width: 600px;
        width: 100%;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .confirmation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        }
</style>
