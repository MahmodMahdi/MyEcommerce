@model ShoppingCartViewModel
@using Microsoft.Extensions.Options
@using MyEcommerce.ApplicationLayer.ViewModels
@inject IOptions<StripeInfo> stripe

@{
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ar";
    var currency = isArabic ? "ج.م" : "EGP";

    // حسابات الخصم الإجمالية للطلبية لبيان التوفير
    var totalBeforeDiscount = Model.Carts.Sum(c => c.Count * c.Product.Price);
    var totalSavings = totalBeforeDiscount - Model.OrderHeader.TotalPrice;
}

<!doctype html>
<html>
<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>@(isArabic ? "تأكيد الطلب" : "Order Summary")</title>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f7f6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .wrapper {
            padding: 40px 0;
        }

        /* الكارد الرئيسي المستوحى من تصميم السلة */
        .summary-card {
            border: none;
            border-radius: 25px;
            background: #fff;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            padding: 30px;
        }

        /* ضبط خانات الإدخال لتكون رقيقة (Standard Size) */
        .form-control {
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            padding: 10px 15px; /* تم تقليلها لضبط الحجم */
            height: auto;
            font-size: 0.9rem;
            background-color: #fcfcfc;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: #2575fc;
                box-shadow: 0 0 0 0.2rem rgba(37, 117, 252, 0.1);
                background-color: #fff;
            }

        label {
            font-weight: 600;
            color: #555;
            margin-bottom: 8px;
            font-size: 0.85rem;
            display: block;
        }

        /* تنسيق قائمة المنتجات */
        .product-item {
            border-bottom: 1px solid #f8f9fa;
            padding: 15px 0;
        }

        .product-img {
            border-radius: 12px;
            object-fit: cover;
            border: 1px solid #f0f0f0;
        }

        /* صندوق التوفير الأخضر (Match Cart Design) */
        .savings-box {
            background-color: #f0fff4;
            color: #28a745;
            padding: 12px;
            border-radius: 12px;
            font-weight: 600;
            border: 1px dashed #28a745;
            font-size: 0.9rem;
        }

        /* الزر الرئيسي باللون الأزرق المتدرج */
        .btn-checkout {
            background: linear-gradient(90deg, #1572e8, #0056b3);
            border: none;
            border-radius: 50px;
            padding: 15px;
            font-weight: bold;
            font-size: 1.1rem;
            color: white;
            transition: all 0.3s;
        }

            .btn-checkout:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(21, 114, 232, 0.4);
                color: white;
            }

        .text-primary-custom {
            color: #1572e8;
        }
    </style>
</head>
<body>

    <div class="container wrapper">
        <form method="post" asp-action="PostSummary">
            <div class="row gx-lg-5">

                <div class="col-lg-7 mb-4">
                    <div class="summary-card h-100">
                        <h4 class="fw-bold mb-4">
                            <i class="fas fa-map-marker-alt text-primary-custom mr-2"></i>
                            @(isArabic ? "عنوان التوصيل" : "Shipping Address")
                        </h4>

                        <div class="form-group mb-3">
                            <label>@(isArabic ? "الاسم بالكامل" : "Full Name")</label>
                            <input asp-for="OrderHeader.Name" class="form-control">
                            <span asp-validation-for="OrderHeader.Name" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="form-group mb-3">
                                <label>@(isArabic ? "رقم الهاتف" : "Phone Number")</label>
                                <input asp-for="OrderHeader.PhoneNumber" class="form-control" placeholder="01xxxxxxxxx">
                                <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label>@(isArabic ? "المدينة" : "City")</label>
                                <input asp-for="OrderHeader.City" class="form-control" >
                                <span asp-validation-for="OrderHeader.City" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group mb-0">
                            <label>@(isArabic ? "العنوان بالتفصيل" : "Address")</label>
                            <textarea asp-for="OrderHeader.Address" class="form-control" rows="2" placeholder="@(isArabic ? "رقم المبنى، اسم الشارع..." : "Bld No, Street Name...")"></textarea>
                            <span asp-validation-for="OrderHeader.Address" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5">
                    <div class="summary-card">
                        <h5 class="fw-bold mb-4">@(isArabic ? "ملخص الطلب" : "Order Summary")</h5>

                        <div class="product-list mb-4" style="max-height: 280px; overflow-y: auto;">
                            @foreach (var item in Model.Carts)
                            {
                                <div class="product-item d-flex align-items-center">
                                    <div class="position-relative">
                                        <img src="/@item.Product.Image" width="55" height="55" class="product-img mr-3">
                                        <span class="badge badge-dark position-absolute" style="top:-5px; right:5px; border-radius:50%">@item.Count</span>
                                    </div>
                                    <div class="flex-grow-1 ml-2">
                                        <h6 class="mb-0 fw-bold small">@item.Product.Name</h6>
                                        <small class="text-muted">@item.Product.AcualPrice.ToString("N2") @currency</small>
                                    </div>
                                    <div class="fw-bold small text-dark">
                                        @((item.Count * item.Product.AcualPrice).ToString("N2"))
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="price-details mt-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">@(isArabic ? "الإجمالي" : "Subtotal")</span>
                                <span class="fw-bold text-dark">@totalBeforeDiscount.ToString("N2") @currency</span>
                            </div>

                            @if (totalSavings > 0)
                            {
                                <div class="d-flex justify-content-between mb-3 savings-box">
                                    <span><i class="fas fa-tag mr-1"></i> @(isArabic ? "لقد وفرت" : "Discount Savings")</span>
                                    <span>- @totalSavings.ToString("N2") @currency</span>
                                </div>
                            }

                            <hr class="my-3">

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="h5 fw-bold text-dark mb-0">@(isArabic ? "المبلغ الكلي" : "Total")</span>
                                <div class="text-right">
                                    <span class="h4 fw-bold text-primary-custom mb-0">@Model.OrderHeader.TotalPrice.ToString("N2")</span>
                                    <small class="text-primary-custom fw-bold">@currency</small>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-checkout w-100 shadow-sm mb-3">
                            @(isArabic ? "إتمام الطلب والدفع" : "Place Order Now") <i class="fas fa-chevron-right ml-2 small"></i>
                        </button>

                        <div class="text-center">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/b/ba/Stripe_Logo%2C_revised_2016.svg" width="55" class="mb-2">
                            <p class="text-muted" style="font-size: 0.7rem;">
                                <i class="fas fa-lock text-success mr-1"></i>
                                @(isArabic ? "دفع آمن ومشفر 100%" : "Secure SSL Encrypted Payment")
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js'></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>