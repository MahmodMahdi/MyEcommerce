@using MyEcommerce.ApplicationLayer.ViewModels
@model ShoppingCartViewModel
@{
    // فحص اللغة الحالية
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ar";
    var currency = isArabic ? "ج.م" : "EGP";
    
    ViewBag.Title = isArabic ? "عربة التسوق" : "Shopping Cart";
    
    var totalBeforeDiscount = Model.Carts.Sum(c => c.Count * c.Product.Price);
    var totalSavings = totalBeforeDiscount - Model.TotalCarts;
}

<style>
    :root {
        --primary-gradient: linear-gradient(90deg, #6a11cb, #2575fc);
    }

    .cart-card {
        border-radius: 2rem !important;
        border: none !important;
    }

    .btn-pill {
        border-radius: 50px !important;
    }

    .item-img {
        object-fit: cover;
    }

    .cart-item-row {
        display: flex;
        align-items: center;
        padding: 1.2rem 0;
        border-bottom: 1px solid #f1f1f1;
        width: 100%;
    }

    .product-info {
        flex: 1;
        padding: 0 15px;
    }

    .price-stack {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
    }

    .qty-wrapper {
        display: flex;
        align-items: center;
        background: #f8f9fa;
        border-radius: 12px;
        padding: 4px;
        flex-shrink: 0;
    }

    .qty-btn {
        width: 20px;
        height: 28px;
        background: white;
        border: 1px solid #eee;
        border-radius: 8px !important;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #333;
    }

    .total-column {
        text-align: @(isArabic ? "left" : "right");
        min-width: 100px;
        flex-shrink: 0;
        margin: 0 15px;
    }

    .remove-col {
        flex-shrink: 0;
    }

    .savings-badge {
        background: #ecfdf5;
        color: #10b981;
        border: 1px dashed #10b981;
        border-radius: 12px;
        padding: 12px;
    }
</style>
<div class="container py-5 cart-container notranslate">
    @if (!Model.Carts.Any())
    {
        <div class="text-center py-5">
            <div class="display-1 text-secondary mb-3">&#128722;</div>
            <h3 class="fw-bold">@(isArabic ? "عربة التسوق فارغة!" : "Your Cart is Empty!")</h3>
            <p class="text-muted mb-3">@(isArabic ? "أضف بعض المنتجات لتبدأ التسوق" : "Add some products and spice up your cart!")</p>
            <a href="/Customer/Home/Index" class="btn btn-lg btn-primary px-5 py-2 rounded-pill shadow">
                @(isArabic ? "اذهب للتسوق" : "Go Shopping")
            </a>
        </div>
    }
    else
    {
        <div class="row gx-lg-5">
            <div class="col-lg-8 mb-4">
                <div class="card cart-card p-4 shadow-sm bg-white">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                        <h2 class="fw-bold mb-0">@(isArabic ? "عربة التسوق" : "Shopping Cart")</h2>
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm btn-pill px-3">
                            <i class="bi bi-arrow-@(isArabic ? "right" : "left")"></i> 
                            @(isArabic ? "متابعة التسوق" : "Continue Shopping")
                        </a>
                    </div>
                    @foreach (var item in Model.Carts)
                    {
                        <div class="cart-item-row">
                            <div style="flex: 0 0 90px;">
                                <img src="~/@item.Product.Image" class="item-img shadow-sm" style="width:90px; height:60px;" />
                            </div>

                            <div class="product-info">
                                <h6 class="fw-bold mb-1">@item.Product.Name</h6>
                                <div class="price-stack">
                                    <div>
                                        <span class="fw-bold text-dark">@item.Product.AcualPrice.ToString("N0") <small>@currency</small></span>
                                    </div>
                                    @if (item.Product.Discount > 0)
                                    {
                                        <span>
                                            <del class="text-muted small ms-1" style="font-size: 0.75rem;">@item.Product.Price.ToString("N0")</del>
                                            <span class="text-danger fw-bold" style="font-size: 0.7rem;">
                                                @(isArabic ? "وفر " : "SAVE ") @((int)item.Product.Discount)%
                                            </span>
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="qty-wrapper">
                                <a class="qty-btn shadow-sm" asp-action="Minus" asp-route-cartId="@item.Id"><i class="bi bi-dash"></i></a>
                                <span class="mx-3 fw-bold">@item.Count</span>
                                <a class="qty-btn shadow-sm" asp-action="Plus" asp-route-cartId="@item.Id"><i class="bi bi-plus"></i></a>
                            </div>

                            <div class="total-column">
                                <div class="fw-bold h6 mb-0">@((item.Count * item.Product.AcualPrice).ToString("N0"))</div>
                                <small class="text-muted" style="display: block; margin-top: -3px;">@(isArabic ? "الإجمالي" : "Total")</small>
                            </div>

                            <div class="remove-col">
                                <a class="btn btn-sm btn-outline-danger p-2" asp-action="Remove" asp-route-cartid="@item.Id">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card cart-card p-4 shadow-lg border-0 bg-white">
                    <h4 class="fw-bold mb-4">@(isArabic ? "ملخص الطلب" : "Order Summary")</h4>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">@(isArabic ? "المجموع" : "Subtotal")</span>
                        <span class="fw-bold">@totalBeforeDiscount.ToString("N2") @currency</span>
                    </div>

                    @if (totalSavings > 0)
                    {
                        <div class="savings-badge mb-4">
                            <div class="d-flex justify-content-between">
                                <span class="small fw-bold">@(isArabic ? "إجمالي التوفير" : "Discount Savings")</span>
                                <span class="small fw-bold">- @totalSavings.ToString("N2") @currency</span>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center border-top pt-4 mb-4">
                        <span class="h5 fw-bold mb-0">@(isArabic ? "الإجمالي الكلي" : "Total")</span>
                        <div class="text-end">
                            <span class="h3 fw-bold text-primary mb-0">@Model.TotalCarts.ToString("N2")</span>
                            <small class="text-primary fw-bold">@currency</small>
                        </div>
                    </div>

                    <a asp-action="Summary" class="btn btn-primary btn-lg w-70 btn-pill shadow py-3 fw-bold">
                        @(isArabic ? "إتمام الشراء" : "Checkout Now") 
                        <i class="bi bi-arrow-@(isArabic ? "left" : "right") ms-4"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>